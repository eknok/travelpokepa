<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<div class="col-md-4">
  <div class="card" style="width: 22rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @post.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= t("posts.games.#{@post.game}") %></h6>
      <p class="card-text">
        <%= image_tag "/pokemon_images/spr/#{select_spr(@post.party1)}MS.png" %>
        <%= image_tag "/pokemon_images/spr/#{select_spr(@post.party2)}MS.png" %>
        <%= image_tag "/pokemon_images/spr/#{select_spr(@post.party3)}MS.png" %>
        <%= image_tag "/pokemon_images/spr/#{select_spr(@post.party4)}MS.png" %>
        <%= image_tag "/pokemon_images/spr/#{select_spr(@post.party5)}MS.png" %>
        <%= image_tag "/pokemon_images/spr/#{select_spr(@post.party6)}MS.png" %>
      <p class="card-text"><%= @post.comment %></p>
      <a href="#" class="card-link"><%= @post.user.email %></a>
      <a href="#" class="card-link">♡</a>
    </div>
  </div>
  <p><%= link_to '編集', edit_post_path(@post) %>：<%= link_to '削除', post_path, method: 'delete', data: { confirm: '本当に削除しますか？' } %></p>
</div>
