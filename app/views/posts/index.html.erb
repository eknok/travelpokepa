<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4">
      <div class="card" style="width: 22rem;">
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= t("posts.games.#{post.game}") %></h6>
          <p class="card-text">
            <% array_party(post.party).each do |img| %>
              <%= image_tag "/pokemon_images/spr/#{select_spr(img)}MS.png" %>
            <% end %>
          <p class="card-text"><%= post.comment %></p>
          <a href="#" class="card-link"><%= post.user.email %></a>
          <a href="#" class="card-link">â™¡</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
